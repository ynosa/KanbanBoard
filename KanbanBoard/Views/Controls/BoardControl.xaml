<UserControl x:Class="KanbanBoard.Views.Controls.BoardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:KanbanBoard.Views.Controls"             
    mc:Ignorable="d">
    
    <UserControl.Resources>
        <DataTemplate x:Key="columnDialogDataTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock TextAlignment="Center">Column Name</TextBlock>
                    <TextBox Width="308" Text="{Binding BoardTitle}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <StackPanel  x:Name="BoardColumnsContainer" Orientation="Horizontal">
        <controls:ColumnControl/>
        <controls:ColumnControl/>
    </StackPanel>
</UserControl>
