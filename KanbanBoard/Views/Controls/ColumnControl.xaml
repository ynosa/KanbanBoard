<UserControl
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" 
    x:Class="KanbanBoard.Views.Controls.ColumnControl"
    xmlns:local="clr-namespace:KanbanBoard.Behaviors"
    mc:Ignorable="d"
    x:Name="BoardColumn">
    <StackPanel x:Name="LayoutRoot">
        <TextBlock x:Name="ColumnTitle" Text="{Binding ColumnTitle}"/>
        <toolkit:ListBoxDragDropTarget Height="197" VerticalAlignment="Top" Width="200">
            <i:Interaction.Behaviors>
                <local:DragAndDropBehavior/>
            </i:Interaction.Behaviors>
            <ListBox x:Name="listBox" Height="199" Width="201" ItemsSource="{Binding EntityList, Mode=TwoWay}" AllowDrop="True"/>
        </toolkit:ListBoxDragDropTarget>
    </StackPanel>
</UserControl>
