<UserControl x:Class="KanbanBoard.Views.StatusView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel x:Name="qwerty" Orientation="Horizontal">
        <TextBlock x:Name="UserName" Text="{Binding UserName, Mode=OneWay}" />
        <Button x:Name="BoardsButton" Content="show boards" Command="{Binding ShowBoardsCommand}"/>
        <Button x:Name="SettingsButton" Content="settings"/>
        <HyperlinkButton x:Name="LogOutButton" Content="logout" Command="{Binding LogOutCommand}"/>
    </StackPanel>
</UserControl>
